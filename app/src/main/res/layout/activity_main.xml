<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E0F2F1"
    tools:context="edu.jru.deleon.crislenard.examscheduler.MainActivity">

<android.support.v7.widget.CardView
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:backgroundTint="#8BC34A"
    android:padding="10dp"
    android:id="@+id/cardView"
    android:layout_marginLeft="41dp"
    android:layout_alignTop="@+id/cardView2"
    android:layout_toStartOf="@+id/btnPopulateAll">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="UPCOMING"
        android:textSize="20sp"
        android:textColor="#004D40"
        android:layout_marginTop="40dp"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/txtTotalComing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="000"
        android:textColor="#004D40"
        android:textSize="30sp" />
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:padding="10dp"
        android:layout_marginRight="13dp"
        android:id="@+id/cardView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnPopulateAll"
        android:layout_marginTop="13dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#004D40"
            android:id="@+id/txtTotalDone"
         />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textSize="20sp"
            android:textColor="#004D40"
            android:id="@+id/textView2"
            android:layout_marginTop="40dp"
            />

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Schedule"
        android:textColor="#004D40"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_below="@+id/btnPopulateAll"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/btnAddExam"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/lvSched"
        android:cacheColorHint="@color/colorPrimary"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPopulateAll"
        android:src="@drawable/book1"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />





</RelativeLayout>
